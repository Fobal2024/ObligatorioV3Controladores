@model Obligatorio.Models.Socio

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Socio</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LocalAsociado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LocalAsociado)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
    </dl>
</div>
<div>
    <h4>Rutinas</h4>
    <div class="card-deck">
        @if (Model.SocioRutinas != null)
        {
            @foreach (var socioRutina in Model.SocioRutinas)
            {
                var rutina = socioRutina?.Rutina;
                if (rutina != null)
                {
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">@rutina.TipoRutina</h5>
                            <h6 class="card-title">@rutina.Descripcion</h6>
                        </div>
                    </div>
                }
            }
        }
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
 